@{
    Layout = "_Login";
}

<div class="account-pages my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">
                    <div class="card-header bg-img p-5 position-relative">
                        <div class="bg-overlay"></div>
                            @if(ViewBag.Delete =="1")
                            {
                                <h4 class="text-white text-center mb-0">enter your email and password to confirm deleting account</h4>
                            }
                            else
                            {
                                <h4 class="text-white text-center mb-0">Log in to BestPrice Dealership</h4>
                            }
                        </div>
                    <div class="card-body p-4 mt-2">
                        @if(ViewBag.Delete =="1")
                            {
                            <form action="/Login/DeletAccount/" class="p-3">

                                @if (ViewBag.LoginErrorMessage != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.LoginErrorMessage
                                    </div>
                                }

                                <div class="form-group mb-3">
                                    <label for="email"> User name</label>
                                    <input class="form-control" type="email" required="" placeholder="Email" name="email" id="email" value="@ViewBag.Email">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="Password"> Password</label>
                                    <input id="Password" name="Password" class="form-control ShowPass" type="password" required="" placeholder="Password">
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signin" onclick="ShowPassword()">
                                        <label class="custom-control-label" for="checkbox-signin">Show Password</label>
                                    </div>
                                </div>

                                <div class="form-group text-center mt-5 mb-4">
                                    <button class="btn btn-primary waves-effect width-md waves-light" type="submit"> Confirm Deleting </button>
                                </div>
                            </form>
                            }
                            else
                            {

                            <form action="/Login/LoginAction/" class="p-3">

                                @if (ViewBag.LoginErrorMessage != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.LoginErrorMessage
                                    </div>
                                }

                                <div class="form-group mb-3">
                                    <label for="email"> User name</label>
                                    <input class="form-control" type="email" required="" placeholder="Email" name="email" id="email" value="@ViewBag.Email">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="Password"> Password</label>
                                    <input id="Password" name="Password" class="form-control ShowPass" type="password" required="" placeholder="Password">
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signin" onclick="ShowPassword()">
                                        <label class="custom-control-label" for="checkbox-signin">Show Password</label>
                                    </div>
                                </div>

                                <div class="form-group text-center mt-5 mb-4">
                                    <button class="btn btn-primary waves-effect width-md waves-light" type="submit"> Log In </button>
                                </div>

                                <div class="form-group row mb-0">
                                    <div class="col-sm-7">
                                        <a href="/Login/ForgetPassword/"><i class="fa fa-lock mr-1"></i> Forgot your password?</a>
                                    </div>
                                    <div class="col-sm-5 text-right">
                                        <a href="/Login/CreateUpdateUser/">Create an account</a>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card -->
                <!-- end row -->

            </div>
            <!-- end col -->
        </div>
        <!-- end row -->

    </div>
</div>

