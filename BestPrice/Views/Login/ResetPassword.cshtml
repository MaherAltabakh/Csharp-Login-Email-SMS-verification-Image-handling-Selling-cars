@{
    Layout = "_Login";
}

@if (ViewBag.TFAEmailNotSentError != null)
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="row">
        <div class=" col-md-5"></div>
        <div class="alert alert-danger col-md-2">
            Please try again, We couldn not send the verification email
        </div>
    </div>
}

else
{
<div class="account-pages my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">
                    <div class="card-header bg-img p-5 position-relative">
                        <div class="bg-overlay"></div>
                        <h4 class="text-white text-center mb-0">New Password</h4>
                    </div>
                    <div class="card-body p-4 mt-2">
                        <form action="/Login/ResetPasswordValidation/" method="post" class="p-3">

                                @if (ViewBag.NewPasswordInvalid != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.NewPasswordInvalid
                                    </div>
                                }

                            <div class="form-group mb-3">
                                    <strong>Temporary Password <font color="red">*</font></strong><br>
                                    <input class="form-control ShowPass" type="password" required="" placeholder="Temporary password" name="TempPassword" id="TempPassword">
                            </div>

                             <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="checkbox-signin" onclick="ShowPassword()">
                                    <label class="custom-control-label" for="checkbox-signin">Show Password</label>
                                </div>
                            </div>

                            <div class="alert alert-info" role="alert">
                                <!-- Display the countdown timer in an element -->
                                 <h5>Temp Password valid for 2 min</h5>
                            </div>

                            <div class="form-group text-center mt-5 mb-4">
                                <button class="btn btn-primary waves-effect width-md waves-light" type="submit"> Reset </button>
                            </div>

                            <div class="form-group row mb-0">
                                <div class="col-sm-5">
                                </div>
                                <div class="col-sm-7 text-right">
                                    <a href="/Login/ForgetPassword/">Resend Temp Password</a>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card -->
                <!-- end row -->

            </div>
            <!-- end col -->
        </div>
        <!-- end row -->

    </div>
</div>




}




