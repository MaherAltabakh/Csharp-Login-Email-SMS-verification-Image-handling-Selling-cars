@model BestPrice.Models.Car


<h3> Upload new image:</h3>

<div class="row">

    <div class="col-lg-3">
        <form asp-controller="BuyCar" asp-action="SaveUpdatedImage" enctype="multipart/form-data">
                <div class="form-group">
                <input type="hidden" name="imageName" id="imageName" value="@ViewBag.imageName" />
                <input type="hidden" name="CarID" id="CarID" value="@ViewBag.carID" />



                <label for="ImageFile" class="control-label"></label><br />
                    <input type="file" name="ImageFile" id="ImageFile" accept="image/*" />
                </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Edit Image" />
                &ensp;
                <input type=button onClick="parent.location='/BuyCar/EditCar?CarID= @ViewBag.carID'" name="cancel" id="cancel" value="Cancel">

            </div>

        </form>
    </div>
</div>