

<div class="row">
    <div class="col-lg-2">
        <h2 class="view-image-text"><u>Car Detials:</u></h2>
    </div>

    <div class="col-lg-8">
    </div>

    <div class="col-lg-2">
        <div> &emsp;&emsp;&emsp; <a href="/Home/Index">  Home</a></div>
    </div>
</div>



<div class="row">
    <div class="col-lg-4">
        <br />
        <br />
        <br />
        <div class="center-text gray-background">
            <h3 class="view-image-text"> Price: $<strong>@ViewBag.car.Price.ToString("#,###,###") </strong></h3>
        </div>
        <br />
        <br />
        <div class="center-text gray-background">
            <h5 class="view-image-text"> Car Maker: <strong> @ViewBag.car.CarMaker </strong></h5>
            <h5 class="view-image-text"> Car Model: <strong> @ViewBag.car.CarModel </strong></h5>
            <h5 class="view-image-text"> Car year: <strong> @ViewBag.car.Year </strong></h5>
            <h5 class="view-image-text"> Car odometer: <strong> @ViewBag.car.Odometer.ToString("#,###,###") miles </strong></h5>
            <h5 class="view-image-text"> VIN number: <strong> @ViewBag.car.CarVinNumber </strong></h5>
            <h5 class="view-image-text"> Car color: <strong> @ViewBag.car.CarColor </strong></h5>
            <!--        <h3 class="view-image-text center-text"> Car color: <strong> @ViewBag.car.CarColor </strong></h3>   -->
        </div>
    </div>

    <div class="col-lg-8">
       


        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>

                @for (int i = 1; i < ViewBag.ImageNumbers; i++)
                {
                    if (i == 19) break;
                   <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }

                
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block image-size center" src="@("~/UploadedImage/" + @ViewBag.car.ImageName[0])" asp-append-version="true" alt="First slide">
                </div>
                @for (int i = 1; i < ViewBag.ImageNumbers; i++)
                {
                    if(i==19) break;
                    <div class="carousel-item">
                        <img class="d-block image-size center" src="@("~/UploadedImage/" + @ViewBag.car.ImageName[i])" asp-append-version="true" alt="First slide">
                    </div>
                }                
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="false"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


    </div>
</div>



